Vagrant.configure("2") do |config|
  config.vm.synced_folder "./conf", "/vagrant_data"
  config.vm.define "lwilliamS" do |master|
    master.vm.box = "generic/debian12"
    master.vm.hostname = "lwilliamS"
    master.vm.network "private_network", ip: "192.168.56.110"
    master.vm.provider "vmware_desktop" do |vm|
      vm.vmx["memsize"] = "1024"
      vm.vmx["numvcpus"] = "1"    
    end
    master.vm.provision "shell", inline: <<-SHELL
      apt-get update
      curl -sfL https://get.k3s.io | sh -
      cp /var/lib/rancher/k3s/server/node-token /vagrant_data
    SHELL
  end

  config.vm.define "lwilliamSW" do |control|
    control.vm.box = "generic/debian12"
    control.vm.hostname = "lwilliamSW"
    control.vm.network "private_network", ip: "192.168.56.111"
    master.vm.provider "vmware_desktop" do |vm|
      vm.vmx["memsize"] = "1024"
      vm.vmx["numvcpus"] = "1" 
    end
    control.vm.provision "shell", inline: <<-SHELL
      apt-get update
      cat /vagrant_data/node-token
      curl -sfL https://get.k3s.io | K3S_URL=https://192.168.56.110:6443 K3S_TOKEN=$(cat /vagrant_data/node-token) sh -
    SHELL
  end
end